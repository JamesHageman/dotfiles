root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.cfc]
trim_trailing_whitespace = false

[*.cfm]
trim_trailing_whitespace = false

[*.xml]
trim_trailing_whitespace = false

[*.elm]
indent_size = 4

[*.go]
indent_size = 4
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
